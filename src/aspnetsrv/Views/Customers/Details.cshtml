@model aspnetsrv.Models.Customer

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Orders)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Id</th>
                    <th>Good</th>
                    <th>Date</th>
                    <th>Is paid</th>
                    <th>Delivery date</th>
                </tr>
                @foreach (var item in Model.Orders)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => item.Id)</td>
                        <td>@Html.DisplayFor(x => item.Good.Title)</td>
                        <td>@Html.DisplayFor(x => item.Date)</td>
                        <td>@Html.DisplayFor(x => item.IsPaid)</td>
                        <td>@Html.DisplayFor(x => item.DeliveryDate)</td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
